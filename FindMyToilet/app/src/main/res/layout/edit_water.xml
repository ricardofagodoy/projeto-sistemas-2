<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical"
    android:padding="@dimen/EditDialogPadding">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_water"
        android:id="@+id/title"
        android:textSize="@dimen/titleFontSize"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit"
            android:src="@drawable/edit"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/report"
        android:src="@drawable/report"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text=""
        android:id="@+id/address"
        android:textSize="@dimen/textFontSize"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/cold"
            android:layout_width="@dimen/water_edit_filter_size"
            android:layout_height="@dimen/water_edit_filter_size"
            app:backgroundTint="@color/filterColor"
            android:layout_margin="@dimen/items_margin_between"
            android:src="@drawable/cold"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/filtered"
            android:layout_width="@dimen/water_edit_filter_size"
            android:layout_height="@dimen/water_edit_filter_size"
            app:backgroundTint="@color/filterColor"
            android:layout_margin="@dimen/items_margin_between"
            android:src="@drawable/filtered"
            />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/water_edit_rating_size"
            android:layout_height="@dimen/water_edit_rating_size"
            android:id="@+id/waterDislike"
            android:src="@drawable/dislike"
            android:tag=""
            android:layout_margin="@dimen/items_margin_between"/>


        <ImageView
            android:layout_width="@dimen/water_edit_rating_size"
            android:layout_height="@dimen/water_edit_rating_size"
            android:id="@+id/waterLike"
            android:src="@drawable/like"
            android:tag=""
            android:layout_margin="@dimen/items_margin_between"
            android:elevation="1dp" />

    </TableRow>

</TableLayout>

</LinearLayout>